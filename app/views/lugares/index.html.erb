<h1>Listing lugares</h1>

<table>
  <tr>
    <th>Tipo</th>
    <th>Nome</th>
    <th>Endereco rua</th>
    <th>Endereco numero</th>
    <th>Endereco bairro</th>
    <th>Endereco cidade</th>
    <th>Endereco estado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lugares.each do |lugar| %>
  <tr>
    <td><%= lugar.tipo %></td>
    <td><%= lugar.nome %></td>
    <td><%= lugar.endereco_rua %></td>
    <td><%= lugar.endereco_numero %></td>
    <td><%= lugar.endereco_bairro %></td>
    <td><%= lugar.endereco_cidade %></td>
    <td><%= lugar.endereco_estado %></td>
    <td><%= link_to 'Show', lugar %></td>
    <td><%= link_to 'Edit', edit_lugar_path(lugar) %></td>
    <td><%= link_to 'Destroy', lugar, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

